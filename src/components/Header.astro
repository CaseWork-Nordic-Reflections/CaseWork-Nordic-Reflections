<style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
  }

  .header {
    background-color: #fff;
    border-bottom: 1px solid #b80202;
    text-align: center;
    padding: 10px 20px;
    position: relative;
  }

  .top-row {
    position: relative; /* Sikrer, at flagene placeres relativt til top-row */
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 10px 0; /* Afstand mellem elementerne i top-row */
  }

  /* Flagene i language-selector */
  .language-selector {
    position: absolute; /* Gør flagene uafhængige af andre elementer */
    top: 15px; /* Placer dem altid 15px fra toppen */
    left: 20px; /* Placer dem altid 20px fra venstre */
    display: flex;
    gap: 10px; /* Afstand mellem flagene */
  }

  .language-selector .flag {
    width: 40px;
    height: auto;
    cursor: pointer;
  }

  /* Sociale medier styling */
  .social-icons {
    display: flex;
    justify-content: flex-end; /* Ikoner flugter mod højre */
    gap: 15px;
  }

  .social-icons a {
    display: inline-block;
    height: 40px;
    width: 40px;
    background-color: #d5d5d5;
    text-align: center;
    line-height: 40px;
    border-radius: 50%; /* Runde ikoner */
    color: #000; /* Farve for ikoner */
    transition: all 0.5s ease; /* Glidende overgang */
    font-size: 18px; /* Tilpas ikonstørrelse */
  }

  .social-icons a:hover {
    color: #ffffff; /* Farve ved hover */
    background-color: #000000; /* Lys baggrund ved hover */
  }

  /* Logo centreret uafhængigt */
  .logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    width: 20rem;
    height: auto;
  }

  .main-nav {
    display: flex;
    justify-content: center; /* Centrer navigationen */
    gap: 20px; /* Afstand mellem links */
    margin-top: 20px; /* Plads mellem logoet og navigationen */
    position: relative; /* Holder navigationen under logoet */
    z-index: 1; /* Holder navigationen synlig ovenpå andre elementer */
  }

  .main-nav a {
    text-decoration: none;
    color: #000;
    font-size: 16px;
  }

  /* Dropdown styling */
  .dropdown {
    position: relative;
  }

  .dropdown-toggle {
    background: none;
    border: none;
    font-size: 16px;
    cursor: pointer;
    text-align: left;
    color: #000;
    padding: 10px;
    width: 100%;
  }

  .dropdown-toggle span {
    float: right;
  }

  .dropdown-menu {
    display: none; /* Skjul som standard */
    position: absolute;
    top: 100%; /* Placer under dropdown-toggle */
    left: 0;
    background-color: #fff;
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
    border: 1px solid #ddd;
    z-index: 99;
  }

  .dropdown-menu li {
    padding: 10px;
    border-bottom: 1px solid #ddd;
  }

  .dropdown-menu li:last-child {
    border-bottom: none;
  }

  .dropdown-menu li a {
    text-decoration: none;
    color: #000;
    display: block;
    width: 100%;
  }

  .dropdown-menu li a:hover {
    background-color: #f0f0f0;
  }

  /* Fold-ud menuen aktiveret */
  .dropdown.open .dropdown-menu {
    display: block; /* Vis dropdown-menu */
  }

  /* Burger-menu styling */
  .burger-menu {
    display: none; /* Skjules som standard */
    flex-direction: column;
    justify-content: space-between;
    position: absolute;
    top: 15px;
    right: 20px;
    height: 20px;
    width: 30px;
    cursor: pointer;
    z-index: 100; /* Sørg for, at den er øverst */
  }

  .burger-menu .line {
    height: 3px;
    width: 100%;
    background-color: #000; /* Sort linje til burger-ikonet */
  }

  @media (max-width: 767px) {
    /* Justeringer for små skærme */
    .header {
      padding: 10px 20px;
    }

    /* Reducer logoets størrelse */
    .logo {
      height: auto;
    }

    /* Flagene */
    .language-selector {
      position: absolute;
      top: 15px;
      left: 10px;
      display: flex;
      gap: 8px;
    }

    .language-selector .flag {
      width: 30px;
      height: auto;
    }

    /* Sociale medier */
    .social-icons {
      display: none; /* Sociale medier skjules på små skærme */
    }

    /* Burger-menu */
    .burger-menu {
      display: flex; /* Gør burger-menuen synlig */
      flex-direction: column;
      justify-content: space-between;
      position: absolute;
      top: 15px;
      right: 20px;
      height: 20px;
      width: 30px;
      cursor: pointer;
      z-index: 100;
    }

    .burger-menu .line {
      height: 3px;
      width: 100%;
      background-color: #000;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease;
    }

    /* Burger-menu animation til "X" */
    .burger-menu.active .line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 5px); /* Øverste linje */
    }

    .burger-menu.active .line:nth-child(2) {
      opacity: 0; /* Skjul midterste linje */
    }

    .burger-menu.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -5px); /* Nederste linje */
